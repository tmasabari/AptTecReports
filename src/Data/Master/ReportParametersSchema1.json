{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/ReportParameters",
    "definitions": {
        "ReportParameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ReportTemplate": {
                    "type": "string"
                },
                "DataSource": {
                    "type": "string"
                },
                "Layout": {
                    "$ref": "#/definitions/Layout"
                },
                "HeadersHtml": {
                    "type": "string",
                    "format": "jodit"
                },
                "FootersHtml": {
                    "type": "string",
                    "format": "jodit"
                },
                "Headers": {
                    "$ref": "#/definitions/Headers"
                },
                "Footers": {
                    "$ref": "#/definitions/Footers"
                },
                "GridStyles": {
                    "$ref": "#/definitions/GridStyles"
                },
                "Columns": {
                    "type": "array",
                    "format": "table",
                    "items": {
                        "$ref": "#/definitions/Column"
                    }
                }
            },
            "required": [
                "Columns",
                "DataSource",
                "Footers",
                "GridStyles",
                "Headers",
                "Layout",
                "ReportTemplate"
            ],
            "title": "Report Parameters"
        },
        "Column": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "field": {
                    "type": "string"
                },
                "displayName": {
                    "type": "string"
                },
                "columnSize": {
                    "type": "string"
                },
                "format": {
                    "type": "string"
                }
            },
            "required": [
                "displayName",
                "field"
            ],
            "title": "Column"
        },
        "Footers": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Report-Top-Margin": {
                    "type": "string",
                    "options": {
                        "hidden": true
                    },
                    "template": "{{input}}mm",
                    "watch": {
                        "input": "Report-Top-Margin-input"
                    }
                },
                "Page-Footer-Height": {
                    "type": "string",
                    "options": { "hidden": true },
                    "template": "{{input}}mm",
                    "watch": { "input": "Page-Footer-Height-input" }
                },
                "Report-Right-Margin": {
                    "type": "string",
                    "options": {
                        "hidden": true
                    },
                    "template": "{{input}}mm",
                    "watch": {
                        "input": "Report-Right-Margin-input"
                    }
                },
                "Report-Bottom-Margin": {
                    "type": "string",
                    "options": {
                        "hidden": true
                    },
                    "template": "{{input}}mm",
                    "watch": {
                        "input": "Report-Bottom-Margin-input"
                    }
                },
                "Report-Left-Margin": {
                    "type": "string",
                    "options": {
                        "hidden": true
                    },
                    "template": "{{input}}mm",
                    "watch": {
                        "input": "Report-Left-Margin-input"
                    }
                },
                "Page-Footer-Height": {
                    "type": "string",
                    "options": {
                        "hidden": true
                    },
                    "template": "{{input}}mm",
                    "watch": {
                        "input": "Page-Footer-Height-input"
                    }
                },
                "Page-Header-Height": {
                    "type": "string",
                    "options": {
                        "hidden": true
                    },
                    "template": "{{input}}mm",
                    "watch": {
                        "input": "Page-Header-Height-input"
                    }
                },
                "FooterLeftText": {
                    "type": "string"
                },
                "FooterRightText": {
                    "type": "string"
                },
                "FooterMiddleText1": {
                    "type": "string"
                },
                "FooterMiddleText2": {
                    "type": "string"
                },
                "FooterMiddleText3": {
                    "type": "string"
                },
                "FooterMiddleText4": {
                    "type": "string"
                },
                "FooterMiddleText5": {
                    "type": "string"
                },
                "FooterLeftStyle": {
                    "type": "string"
                },
                "FooterMiddleText1Style": {
                    "type": "string"
                },
                "FooterMiddleText2Style": {
                    "type": "string"
                },
                "FooterMiddleText3Style": {
                    "type": "string"
                },
                "FooterMiddleText4Style": {
                    "type": "string"
                },
                "FooterMiddleText5Style": {
                    "type": "string"
                },
                "FooterRightStyle": {
                    "type": "string"
                }
            },
            "required": [
                "FooterLeftStyle",
                "FooterLeftText",
                "FooterMiddleText1",
                "FooterMiddleText1Style",
                "FooterMiddleText2",
                "FooterMiddleText2Style",
                "FooterMiddleText3",
                "FooterMiddleText3Style",
                "FooterMiddleText4",
                "FooterMiddleText4Style",
                "FooterMiddleText5",
                "FooterMiddleText5Style",
                "FooterRightStyle",
                "FooterRightText"
            ],
            "title": "Footers"
        },
        "GridStyles": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "gridHeaderStyle": {
                    "type": "string"
                },
                "gridStyle": {
                    "type": "string"
                },
                "Content-Table-Border": {
                    "type": "string"
                }
            },
            "required": [
                "Content-Table-Border",
                "gridHeaderStyle",
                "gridStyle"
            ],
            "title": "GridStyles"
        },
        "Headers": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "HeaderLeftText": {
                    "type": "string"
                },
                "HeaderRightText": {
                    "type": "string"
                },
                "HeaderMiddleText1": {
                    "type": "string"
                },
                "HeaderMiddleText2": {
                    "type": "string"
                },
                "HeaderMiddleText3": {
                    "type": "string"
                },
                "HeaderMiddleText4": {
                    "type": "string"
                },
                "HeaderMiddleText5": {
                    "type": "string"
                },
                "HeaderLeftStyle": {
                    "type": "string"
                },
                "HeaderMiddleText1Style": {
                    "type": "string"
                },
                "HeaderMiddleText2Style": {
                    "type": "string"
                },
                "HeaderMiddleText3Style": {
                    "type": "string"
                },
                "HeaderMiddleText4Style": {
                    "type": "string"
                },
                "HeaderMiddleText5Style": {
                    "type": "string"
                },
                "HeaderRightStyle": {
                    "type": "string"
                }
            },
            "required": [
                "HeaderLeftStyle",
                "HeaderLeftText",
                "HeaderMiddleText1",
                "HeaderMiddleText1Style",
                "HeaderMiddleText2",
                "HeaderMiddleText2Style",
                "HeaderMiddleText3",
                "HeaderMiddleText3Style",
                "HeaderMiddleText4",
                "HeaderMiddleText4Style",
                "HeaderMiddleText5",
                "HeaderMiddleText5Style",
                "HeaderRightStyle",
                "HeaderRightText"
            ],
            "title": "Headers"
        },
        "Layout": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "PaperSize": {
                    "type": "string"
                },
                "PaperLayout": {
                    "type": "string"
                },
                "Report-Top-Margin": {
                    "type": "string"
                },
                "Report-Right-Margin": {
                    "type": "string"
                },
                "Report-Bottom-Margin": {
                    "type": "string"
                },
                "Report-Left-Margin": {
                    "type": "string"
                },
                "Page-Header-Height": {
                    "type": "string"
                },
                "Page-Footer-Height": {
                    "type": "string"
                }
            },
            "required": [
                "Page-Footer-Height",
                "Page-Header-Height",
                "PaperLayout",
                "PaperSize",
                "Report-Bottom-Margin",
                "Report-Left-Margin",
                "Report-Right-Margin",
                "Report-Top-Margin"
            ],
            "title": "Layout"
        }
    }
}