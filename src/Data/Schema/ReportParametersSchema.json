{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/ReportParameters",
    "definitions": {
        "ReportParameters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ReportTemplate": {
                    "type": "string",
                    "options": { "hidden": true }
                },
                "DataSource": {
                    "type": "string" ,
                    "options": { "hidden": true }
                },
                "Layout": {
                    "$ref": "#/definitions/Layout"
                },
                "PageHeadersHtml": {
                    "type": "string",
                    "title": "Page Header",
                    "format": "jodit",
                    "options": {
                        "input_width": "100%"
                    }
                },
                "PageFootersHtml": {
                    "type": "string",
                    "title": "Page Footer",
                    "format": "jodit",
                    "options": {
                        "input_width": "100%"
                    }
                },
                "ReportHeadersHtml": {
                    "type": "string",
                    "title": "Report Header",
                    "format": "jodit",
                    "options": {
                        "input_width": "100%"
                    }
                },
                "ReportFootersHtml": {
                    "type": "string",
                    "title": "Report Footer",
                    "format": "jodit",
                    "options": {
                        "input_width": "100%"
                    }
                },
                "Content": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/Htmlcontent"
                            },
                            {
                                "$ref": "#/definitions/Table"
                            }
                        ]
                    },
                    "options": {
                        "disable_array_delete": true,
                        "disable_array_delete_all_rows": true,
                        "disable_array_add": true,
                        "disable_array_reorder": true
                    }

                }
            },
            "defaultProperties": [
                "Layout", "Content"
            ],
            "required": [
                "PageHeadersHtml",
                "PageFootersHtml",
                "DataSource",
                "Layout",
                "ReportTemplate"
            ],
            "title": "Report Parameters"
        },
        "Htmlcontent": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "DataSource":{
                    "type": "string",
                    "options": { "hidden": true }
                },
                "ContentHtml": {
                    "type": "string",
                    "title": "HTML Content",
                    "format": "jodit",
                    "options": {
                        "input_width": "100%"
                    }
                }
            },
            "required": [
                "ContentHtml"
            ],
            "title": "Html Content"
        },
        "Table": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "DataSource":{
                    "type": "string",
                    "options": { "hidden": true }
                },
                "TableContent": {
                    "type": "array",
                    "format": "table",
                    "items": {
                        "$ref": "#/definitions/Column"
                    },
                    "options": {
                        "disable_array_delete": true,
                        "disable_array_delete_all_rows": true,
                        "disable_array_add": true
                    }
                }
            },
            "required": [
                "TableContent"
            ],
            "title": "Table configuration"
        },
        
        "Column": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "isPrint": {
                    "type": "boolean",
                    "format": "checkbox",
                    "title": "To Print"
                },
                "field": {
                    "type": "string",
                    "title": "Name"
                },
                "displayName": {
                    "type": "string",
                    "title": "Title"
                },
                "columnSize": {
                    "type": "string",
                    "title": "Width"
                },
                "format": {
                    "type": "string",
                    "title": "Format"
                }
            },
            "required": [
                "displayName",
                "field"
            ],
            "title": "Column"
        },
        "Layout": {
            "type": "object",
            "additionalProperties": false,
            "format": "grid-strict",
            "properties": {
                "PaperSize": {
                    "type": "string",
                    "title": "Paper size",
                    "enum": ["A3", "A4", "A5", "B4", "B5", "letter", "legal", "ledger"],
                    "options": {    "grid_columns": 4,
                                    "enum_titles": ["A3", "A4", "A5", "B4", "B5", "Letter", "Legal", "Ledger"] }
                },
                "PaperLayout": {
                    "type": "string",
                    "title": "Paper layout",
                    "enum": ["portrait", "landscape"],
                    "options": { "grid_columns": 4 , "grid_break": true,
                        "enum_titles": [
                            "Portrait",
                            "Landscape"
                        ] } 
                },
                "Report-Top-Margin": {
                    "type": "number",
                    "format": "number",
                    "title": "Top margin (mm)"
                },
                "Report-Right-Margin": {
                    "type": "number",
                    "format": "number",
                    "title": "Right margin (mm)"
                },
                "Report-Bottom-Margin": {
                    "type": "number",
                    "format": "number",
                    "title": "Bottom margin (mm)"
                },
                "Report-Left-Margin": {
                    "type": "number",
                    "format": "number",
                    "title": "Left margin (mm)"
                },
                "Page-Header-Height": {
                    "type": "number",
                    "format": "number",
                    "title": "Page header height (mm)"
                },
                "Page-Footer-Height": {
                    "type": "number",
                    "format": "number",
                    "title": "Page footer height (mm)"
                }
            },
            "required": [
                "PaperLayout",
                "PaperSize",
                "Report-Bottom-Margin",
                "Report-Left-Margin",
                "Report-Right-Margin",
                "Report-Top-Margin"
            ],
            "title": "Layout"
        }
    }
}